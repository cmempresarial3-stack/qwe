modules = ["nodejs-20", "web"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 35595
externalPort = 3002

[[ports]]
localPort = 39593
externalPort = 3000

[[ports]]
localPort = 42131
externalPort = 3001

[env]
PORT = "5000"

[agent]
integrations = ["javascript_stripe:1.0.0"]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Info"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Expo"

[[workflows.workflow]]
name = "Expo Info"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"=== VERSO DIÁRIO - APP MOBILE REACT NATIVE ===\" && echo \"\" && echo \"Este é um projeto MOBILE (React Native + Expo) para geração de APK.\" && echo \"\" && echo \"IMPORTANTE: O Replit é usado apenas como IDE/repositório.\" && echo \"Para executar o app, você precisa:\" && echo \"\" && echo \"1. Baixar o código para sua máquina local\" && echo \"2. Instalar dependências: npm install\" && echo \"3. Iniciar o Expo: npx expo start\" && echo \"4. Escanear QR code com Expo Go no celular\" && echo \"\" && echo \"Para gerar APK:\" && echo \"- EAS Build: eas build --platform android --profile preview\" && echo \"- Build Local: npx expo prebuild + Android Studio\" && echo \"\" && echo \"Consulte o README.md para instruções completas.\" && echo \"\" && sleep infinity"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Start Expo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[workflows.workflow.metadata]
outputType = "console"
